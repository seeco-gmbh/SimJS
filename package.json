{
    "name": "simjs",
    "version": "1.0.0",
    "description": "A simulation library in JavaScript",
    "main": "dist/simjs.js",
    "module": "dist/simjs.js",
    "browser": "dist/simjs.umd.js",
    "types": "dist/SimJS.d.ts",
    "type": "module",
    "files": [
        "dist/"
    ],
    "scripts": {
        "build": "npm run build:types && npm run build:bundle",
        "build:types": "tsc --declaration --emitDeclarationOnly --outDir dist",
        "build:bundle": "rollup -c",
        "build:watch": "rollup -c --watch",
        "dev": "npm run build:types && npm run build:watch",
        "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
        "test:watch": "node --experimental-vm-modules node_modules/jest/bin/jest.js --watch",
        "test:coverage": "node --experimental-vm-modules node_modules/jest/bin/jest.js --coverage",
        "test:debug": "node --experimental-vm-modules --inspect-brk node_modules/jest/bin/jest.js --runInBand",
        "prepublishOnly": "npm run build"
    },
    "keywords": [
        "simulation",
        "simjs",
        "event-driven"
    ],
    "author": "Pascal Seeber",
    "license": "MIT",
    "devDependencies": {
        "@babel/core": "^7.24.0",
        "@babel/preset-env": "^7.24.0",
        "@babel/preset-typescript": "^7.24.0",
        "@rollup/plugin-terser": "^0.4.4",
        "@rollup/plugin-typescript": "^12.1.4",
        "@types/jest": "^29.5.0",
        "@types/node": "^20.0.0",
        "babel-jest": "^29.7.0",
        "jest": "^29.7.0",
        "jest-environment-node": "^29.7.0",
        "rollup": "^2.79.2",
        "rollup-plugin-terser": "^7.0.2",
        "tslib": "^2.8.1",
        "typescript": "^5.0.0"
    },
    "directories": {
        "test": "tests"
    },
    "engines": {
        "node": ">=16.0.0"
    }
}
